<ul>
  <% @files.each do |file| %>
  <li>
    <a href="/<%= file %>"><%= file %></a>
    <a href="/<%= file %>/edit">edit</a>
    <form class="inline" action="/<%= file %>/duplicate" method="post">
      <button type="submit">duplicate</button>
    </form>
    <form class="inline" action="/<%= file %>/destroy" method="post">
      <button type="submit">delete</button>
    </form>
  </li>
  <% end %>
</ul>

<div>
  <p><a href="/new">New Document!</a></p>
</div>

<div>
  <% if signed_in? %>
    <form action="/users/signout" method="post">
      <p class="user-status">Signed in as <%= user %>
      <button type="submit" style="display: inline;">sign out</button>
      </p>
    </form>
  <% else %>
    <form action="/users/signin" method="get">
      <button type="submit">sign in</button>
    </form>
  <% end %>
</div>
